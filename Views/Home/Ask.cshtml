<div class="conteiner">
    <h3>ASK A QUESTION</h3>
    <form asp-controller="Home" asp-action="Ask" class="form-ask">
        <label>Title</label>
        <input type="text" style="margin-bottom: 15px;">
        <label>Context</label>
        <textarea name="Context"></textarea>
        <div class="line"></div>
        <button class="primary-button">Submit Your Question</button>
    </form>
</div>
